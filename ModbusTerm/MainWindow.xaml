                                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="80" />
                                        <DataGridCheckBoxColumn Header="Value" Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" />
